<Window x:Class="_12Month_WPF_1.Game_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12Month_WPF_1"
        mc:Ignorable="d"
        Title="Game_Window" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FF00C515">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Background="#FF00C515">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>

                <ColumnDefinition Width="Auto"/>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="Auto"/>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="100"/>

            </Grid.ColumnDefinitions>

            <Label Content="PLAY WINDOW" 
                   Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="50" 
                   Background="White" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center" 
                   FontWeight="Bold"
                   Padding="20,10"
                   MinWidth="400" Margin="530,0,0,0"/>


            <Button x:Name="Back_Button" 
                    Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="128" 
                    Height="128"
                    Click="Back_Button_Click" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Image Source="/Arrow_Back.png" 
                       Stretch="Uniform"
                       Width="128"
                       Height="128"/>
            </Button>

            <Grid Grid.Row="2" Grid.ColumnSpan="6" Background="Transparent">

            </Grid>
        </Grid>
    </Viewbox>
</Window>