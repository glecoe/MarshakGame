<Window x:Class="_12Month_WPF_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12Month_WPF_1"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        WindowStyle="None" Background="#FFAFA6A6">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Background="#FFAFA6A6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="Play_Button" 
                    Content="НАЧАТЬ ИГРУ" 
                    Grid.Row="1" Grid.Column="1"
                    Height="134" Width="700"
                    Margin="0,0,0,20"
                    Background="White" 
                    FontSize="48" 
                    Cursor="Hand" 
                    Click="Play_Button_Click"/>

            <Button x:Name="Settings_Button" 
                    Content="НАСТРОЙКИ" 
                    Grid.Row="2" Grid.Column="1"
                    Height="134" Width="700"
                    Margin="0,0,0,20"
                    Background="White" 
                    FontSize="48" 
                    Cursor="Hand" 
                    Click="Settings_Button_Click"/>
<!---->
            <Button x:Name="Magic_Story_Button" 
                    Content="ВОЛШЕБНЫЕ ПРОИЗВЕДЕНИЯ" 
                    Grid.Row="3" Grid.Column="1"
                    Height="134" Width="700"
                    Margin="0,0,0,20"
                    Background="White" 
                    FontSize="48" 
                    Cursor="Hand" 
                    Click="Magic_Story_Button_Click"/>

            <Button x:Name="Close_Button" 
                    Content="ВЫХОД" 
                    Grid.Row="4" Grid.Column="1"
                    Height="134" Width="700"
                    Background="White" 
                    FontSize="48" 
                    Cursor="Hand" 
                    Click="Close_Button_Click"/>
        </Grid>
    </Viewbox>
</Window>