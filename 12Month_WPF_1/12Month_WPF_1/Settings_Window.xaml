<Window x:Class="_12Month_WPF_1.Settings_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12Month_WPF_1"
        mc:Ignorable="d"
        Title="Settings_Window" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="#FF10CED2">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Background="#FF10CED2">
            <Grid.RowDefinitions>
                <RowDefinition Height="74"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>

                <ColumnDefinition Width="Auto"/>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="Auto" MinWidth="400"/>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="128"/>

                <ColumnDefinition Width="70"/>

            </Grid.ColumnDefinitions>

            <!-- Заголовок SETTINGS (центрированный) -->
            <Label Content="SETTINGS" 
                   Grid.Row="1" Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="50" 
                   Background="White" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center" 
                   FontWeight="Bold"
                   MinWidth="400"
                   Padding="20,10" Height="86" Width="400"/>

            <!-- Кнопка "Назад" с адаптивным изображением -->
            <Button x:Name="Back_Button" 
                    Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="128" 
                    Height="128"
                    Click="Back_Button_Click" 
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/Arrow_Back.png" 
                       Stretch="Uniform"
                       Width="128"
                       Height="128"/>
            </Button>

            <!-- Основная область для настроек -->
            <Grid Grid.Row="2" Grid.ColumnSpan="6" Margin="20,20,20,20">
                <!-- Здесь можно разместить элементы настроек -->
                <!-- Пример: -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
                    <CheckBox Content="Включить звук" FontSize="30" Margin="0,10" Width="230"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Window>