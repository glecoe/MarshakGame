<Page x:Class="MarshakGame.Views.LightOfMonthsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LightOfMonthsPage">
    <Grid x:Name="MainGrid">
        <!-- Фон и игровые элементы -->
        <Image x:Name="BackgroundImage" Source="/Assets/Images/background_puzzle.jpg" Stretch="Fill"/>
        <Canvas x:Name="GameCanvas" Background="Transparent"/>

        <!-- Текст статуса -->
        <TextBlock x:Name="StatusText" Text="Соедините огоньки в порядке!" FontSize="32" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30"/>

        <!-- Стартовый экран -->
        <Border x:Name="StartScreen" Background="#80000000" Visibility="Visible" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Свет месяцев" FontSize="72" Foreground="#FFFF9900" 
                           TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Помоги падчерице осветить путь к подснежникам!" 
                           FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button Content="Начать игру" FontSize="36" Padding="40,20" Margin="40,20" 
                        Background="#FF4A2E1D" Foreground="White" 
                        BorderBrush="#FFFF9900" Click="StartHintScreen_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Экран с подсказкой -->
        <Border x:Name="HintScreen" Background="#80000000" Visibility="Collapsed" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Подсказка" FontSize="72" Foreground="#FFFF9900" 
                           TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Соединяй огоньки в правильном порядке, следуя подсветке!" 
                           FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button Content="Понятно" FontSize="36" Padding="40,20" 
                        Background="#FF4A2E1D" Foreground="White" 
                        BorderBrush="#FFFF9900" Click="StartButton_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Экран завершения игры -->
        <Border x:Name="GameOverScreen" Background="#80000000" Visibility="Collapsed" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameResultText" Text="" FontSize="72" 
                           Foreground="#FFFF9900" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button x:Name="RestartButton" Content="Играть снова" FontSize="36" Padding="40,20" 
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900" 
                        Click="RestartGame_Click" HorizontalAlignment="Center"/>
                <Button x:Name="NextButton" Content="Дальше" FontSize="36" Padding="40,20" Margin="0,20,0,0"
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900" 
                        HorizontalAlignment="Center" Visibility="Visible" Click="ContinueStory_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>