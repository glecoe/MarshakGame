<Page x:Class="MarshakGame.Views.TwelveMonthsQuizPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Волшебный костёр"
        Width="1920" Height="1080"
        Background="Black">

    <Grid>
        <Image Source="/Assets/Images/Test_Game_Bg.png" Stretch="Fill" Opacity="0.4"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,80">
        </StackPanel>

        <Grid x:Name="StartScreen" Background="#80000000" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Давай повторим, что было в сказке &quot;Двенадцать Месяцев&quot;" 
                           FontSize="48" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,40" Width="1000"/>
                <Button Content="Начать" Click="StartButton_Click"
                        FontSize="36" Padding="30,10"
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="QuestionPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Border Background="#80000000" CornerRadius="20" BorderBrush="#FFFF9900" BorderThickness="3"
                    Padding="30" Width="700">
                <StackPanel>
                    <TextBlock x:Name="QuestionText" FontSize="28" Foreground="White"
                               TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel x:Name="AnswerButtonsPanel" Margin="0,0,0,30">
                        <!--ОТВЕТЫ-->
                    </StackPanel>

                    <TextBlock x:Name="FeedbackText" FontSize="26" Foreground="Lime"
                               TextAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="HintText" FontSize="24" Foreground="Yellow"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="GameOverScreen" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameResultText" FontSize="48" Foreground="#FFFF9900" TextAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock x:Name="FinalScoreText" FontSize="28" Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="Играть снова" Click="RestartGame_Click"
                        FontSize="28" Padding="30,10"
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900" Margin="0,0,0,20"/>
                <Button Content="Конец Игры" Click="EndGame_Click"
                        FontSize="28" Padding="30,10"
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>