<Page x:Class="MarshakGame.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MenuPage"
      Background="Transparent">

    <Grid>
        <!-- Два столбца: левая скрытая страница, правая – меню -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="1450" />
        </Grid.ColumnDefinitions>

        <!-- Левая страница (можно вставить фон или оставить чистой) -->
        <Border Grid.Column="0" Background="Transparent">
            <!-- Можно добавить картинку фона, иллюстрацию и т.п. ici -->
        </Border>

        <!-- Правая страница (центрированное меню) -->
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="600">
            <TextBlock Text="Добро пожаловать в волшебную книгу"
               FontSize="26"
               FontWeight="Bold"
               Foreground="DarkSlateBlue"
               TextAlignment="Center"
               Margin="0,0,0,40"/>

            <Button Content="Начать игру"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="StartGame_Click"
                    Margin="0,0,0,90"/>
            <Button Content="Волшебные произведения"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ShowWorks_Click"
                    Margin="0,0,0,90"/>
            <Button Content="О С.Я. Маршаке"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="AboutMarshak_Click"
                    Margin="0,0,0,90"/>
            <Button Content="Выход"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Exit_Click"
                    Margin="0,0,0,90"/>
        </StackPanel>
    </Grid>
</Page>
