<Page x:Class="MarshakGame.Views.MagicWorksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MagicWorksPage">

    <Grid>
        <!-- Фон – твоя готовая картинка -->
        <Image Source="/Assets/Images/MagicWorksImage.jpg"
               Stretch="UniformToFill"
               Panel.ZIndex="0"/>

        <!-- Кнопка возврата -->
        <Button Content="Вернуться в меню"
                Width="230"
                Height="58"
                FontSize="18"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,557,254"
                Click="ReturnToMenu_Click"
                Panel.ZIndex="1" FontWeight="Bold" Cursor="Hand"/>
    </Grid>
</Page>
