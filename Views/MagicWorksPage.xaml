<Page x:Class="MarshakGame.Views.MagicWorksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MagicWorksPage">

    <Grid>
        <!-- Фон -->
        <Image Source="/Assets/Images/MagicWorksImage.jpg"
               Stretch="UniformToFill"
               Panel.ZIndex="0"/>

        <!-- Кнопка назад -->
        <Image Source="/Assets/Images/button_back.png"
               Width="200"
               Height="75"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="20"
               Cursor="Hand"
               MouseLeftButtonDown="ReturnToMenu_Click"
               Panel.ZIndex="1"/>
    </Grid>
</Page>