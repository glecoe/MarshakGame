<Window x:Class="MarshakGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="12 месяцев — Волшебная книга"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        xmlns:local="clr-namespace:MarshakGame.Views">

    <!-- Вся внутренняя логика рисуется в Viewbox над фиксированной областью 1920×1080 -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">

            <!-- Фоновая «обложка книги» -->
            <Image Source="\Assets\Images\book_background.jpg"
                   Stretch="UniformToFill"/>

            <!-- Навигационный фрейм для MenuPage, StoryPage, MiniGamePage... -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>

            <!-- Постоянная кнопка Настройки -->
            <Image Source="/Assets/Images/button_settings.png"
                   Width="65"
                   Height="65"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="20"
                   Cursor="Hand"
                   MouseLeftButtonDown="OpenSettings_Click"
                   ToolTip="Настройки">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Opacity" Value="0.9"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" Opacity="0.6" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

        </Grid>
    </Viewbox>
</Window>
