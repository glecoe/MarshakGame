<Window x:Class="MarshakGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="12 месяцев — Волшебная книга"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        xmlns:local="clr-namespace:MarshakGame.Views">

    <!-- Вся внутренняя логика рисуется в Viewbox над фиксированной областью 1920×1080 -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">

            <!-- Фоновая «обложка книги» -->
            <Image Source="\Assets\Images\book_background.jpg"
                   Stretch="UniformToFill"/>

            <!-- Навигационный фрейм для MenuPage, StoryPage, MiniGamePage... -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>

            <!-- Постоянная кнопка Настройки -->
            <Button Content="⚙"
                    ToolTip="Настройки"
                    Width="50" Height="50"
                    FontSize="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="20"
                    Click="OpenSettings_Click"/>

        </Grid>
    </Viewbox>
</Window>
