<Window x:Class="MarshakGame.Views.MiniGames.SnowdropsGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подснежники" 
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <!-- Основной контейнер игры -->
        <Canvas x:Name="GameCanvas" MouseDown="GameCanvas_MouseDown">
            <!-- Фоновое изображение -->
            <Image x:Name="BackgroundImage"
                   Stretch="UniformToFill">
                <Image.Source>
                    <BitmapImage UriSource="/Assets/Images/forest_background.png" />
                </Image.Source>
            </Image>

            <!-- Изображение костра -->
            <Image x:Name="FireImage"
                   Width="250"
                   Height="375"
                   Canvas.Bottom="250"
                   HorizontalAlignment="Center">
                <Image.Source>
                    <BitmapImage UriSource="/Assets/Images/fire.png" />
                </Image.Source>
            </Image>

            <!-- Элементы интерфейса -->
            <TextBlock x:Name="ScoreText"
                       Text="Очки: 0"
                       Foreground="White"
                       FontSize="24"
                       Canvas.Left="20"
                       Canvas.Top="20"/>

            <TextBlock x:Name="TimerText"
                       Text="Время: 30с"
                       Foreground="White"
                       FontSize="24"
                       Canvas.Left="20"
                       Canvas.Top="50"/>
        </Canvas>

        <!-- Стартовый экран -->
        <Border x:Name="StartScreen" Background="#80000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Мини-игра: Подснежники"
                           FontSize="32"
                           Foreground="White"
                           Margin="0,0,0,20"/>
                <TextBlock Text="Ловите дрова и избегайте снежков!"
                           FontSize="24"
                           Foreground="White"
                           Margin="0,0,0,40"/>
                <Button Content="Начать игру"
                        FontSize="24"
                        Padding="20,10"
                        Click="StartGame_Click"/>
            </StackPanel>
        </Border>

        <!-- Экран завершения -->
        <Border x:Name="GameOverScreen" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameResultText"
                           FontSize="32"
                           Foreground="White"
                           Margin="0,0,0,20"/>
                <Button x:Name="NextButton"
                        Content="Продолжить историю"
                        FontSize="24"
                        Padding="20,10"
                        Click="NextButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>