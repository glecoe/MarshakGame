<Page x:Class="MarshakGame.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GamePage">

    <Grid>
        <!-- Фоновое изображение -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" />

        <!-- Основной контейнер с отступом от нижнего края -->
        <Grid VerticalAlignment="Bottom" Margin="0,0,0,0" HorizontalAlignment="Center">

            <!-- Текстовая панель (первая в порядке элементов) -->
            <Border Width="1690" 
                    Height="180"
                    Background="#AA000000"
                    CornerRadius="40"
                    Margin="0,0,17,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <TextBlock x:Name="DialogueText"
                           Foreground="White"
                           FontSize="28"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Padding="50,25"
                           Width="1550"/>
            </Border>

            <!-- Орнаментальная рамка (1800x350) - теперь поверх текста -->
            <Image Source="/Assets/Images/ornament.png"
                   Width="1800"
                   Height="400"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>

        <!-- Кнопка "Далее" -->
        <Image Source="/Assets/Images/button_next.png"
               Width="150"
               Height="60"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,24,156"
               Cursor="Hand"
               MouseLeftButtonDown="NextButton_Click">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6" ShadowDepth="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
    </Grid>
</Page>