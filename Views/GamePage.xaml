 <Page x:Class="MarshakGame.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GamePage">

    <Grid>
        <!-- Фоновое изображение -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" />

        <!-- Текстовая панель внизу -->
        <Border Background="#AA000000" Height="200" Width="1550" VerticalAlignment="Bottom" Margin="15" CornerRadius="15">
            <TextBlock x:Name="DialogueText"
               Foreground="White"
               FontSize="30"
               TextWrapping="Wrap"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Padding="20"/>
        </Border>

        <!-- Кнопка Далее (изображение) -->
        <Image Source="/Assets/Images/button_next.png"
               Width="150"
               Height="60"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,0,60"
               Cursor="Hand"
               MouseLeftButtonDown="NextButton_Click">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6" ShadowDepth="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
    </Grid>
</Page>