<Window x:Class="MarshakGame.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки"
        Width="400"
        Height="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#FF2D2D30"
        Foreground="White"
        Loaded="Window_Loaded">

    <Border BorderBrush="#FF007ACC" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Настройки" 
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Основные настройки -->
            <StackPanel Grid.Row="1">
                <!-- Громкость -->
                <TextBlock Text="Громкость звука:" Margin="0,0,0,5"/>
                <Slider x:Name="VolumeSlider" 
                        Minimum="0" Maximum="100" 
                        Value="{Binding Volume}"
                        Margin="0,0,0,20"/>

                <!-- Разрешение -->
                <TextBlock Text="Разрешение экрана:" Margin="0,0,0,5"/>
                <ComboBox x:Name="ResolutionComboBox"
                          SelectedValue="{Binding Resolution}"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,20"/>

                <!-- Полноэкранный режим -->
                <CheckBox x:Name="FullscreenCheckBox" 
                          Content="Полноэкранный режим"
                          IsChecked="{Binding Fullscreen}"
                          Margin="0,0,0,20"/>

                <!-- Выход в меню -->
                <Button Content="Выйти в главное меню"
                        Click="ReturnToMenu_Click"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10"/>

                <!-- Выход из игры -->
                <Button Content="Выйти из игры"
                        Click="ExitGame_Click"
                        Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>

            <!-- Кнопка закрытия -->
            <Button x:Name="CloseButton"
                    Grid.Row="2"
                    Content="Закрыть"
                    HorizontalAlignment="Right"
                    Width="100"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>