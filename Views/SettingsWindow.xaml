<Window x:Class="MarshakGame.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Width="400" Height="300">
    <StackPanel Margin="20">
        <TextBlock Text="Громкость:"/>
        <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100"/>
        <CheckBox x:Name="FullscreenCheckBox" Content="Полноэкранный режим" Margin="0,20,0,0"/>
        <Button Content="Сохранить" Margin="0,20,0,0" Click="SaveSettings_Click"/>
    </StackPanel>
</Window>