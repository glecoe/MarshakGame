<Page x:Class="MarshakGame.Views.FlowerGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FlowerGamePage">
    <Grid x:Name="MainGrid">
        <!-- Фон и игровые элементы -->
        <Image x:Name="BackgroundImage" Source="/Assets/Images/background.jpg" Stretch="Fill"/>
        <Canvas x:Name="FlowerCanvas" Width="1920" Height="1080" IsHitTestVisible="True" Background="Transparent"/>
        <Image x:Name="BasketImage" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30" Source="/Assets/Images/basket_empty.png"/>

        <!-- Панель счёта -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30">
            <TextBlock x:Name="ScoreText" Text="Собрано: 0/0" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <StackPanel x:Name="HeartsPanel" Orientation="Horizontal" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Стартовый экран -->
        <Border x:Name="StartScreen" Background="#80000000" Visibility="Visible" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Волшебная корзина" FontSize="72" Foreground="#FFFF9900" 
                           TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Помоги падчерице собрать все подснежники с поляны!" 
                           FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button Content="Начать игру" FontSize="36" Padding="40,20" Margin="40,20" 
                        Background="#FF4A2E1D" Foreground="White" 
                        BorderBrush="#FFFF9900" Click="StartHintScreen_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Экран с подсказкой -->
        <Border x:Name="HintScreen" Background="#80000000" Visibility="Collapsed" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Подсказка" FontSize="72" Foreground="#FFFF9900" 
                           TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Собирай только подснежники!" 
                           FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button Content="Понятно" FontSize="36" Padding="40,20" 
                        Background="#FF4A2E1D" Foreground="White" 
                        BorderBrush="#FFFF9900" Click="StartButton_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Экран завершения игры -->
        <Border x:Name="GameOverScreen" Background="#80000000" Visibility="Collapsed" 
                Width="1920" Height="1080" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameResultText" Text="" FontSize="72" 
                           Foreground="#FFFF9900" TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock x:Name="FinalScoreText" Text="" FontSize="36" 
                           Foreground="White" TextAlignment="Center" Margin="0,0,0,30"/>
                <Button x:Name="RestartButton" Content="Играть снова" FontSize="36" Padding="40,20" 
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900" 
                        Click="RestartGame_Click" HorizontalAlignment="Center"/>
                <Button x:Name="NextButton" Content="Дальше" FontSize="36" Padding="40,20" Margin="0,20,0,0"
                        Background="#FF4A2E1D" Foreground="White" BorderBrush="#FFFF9900" 
                        HorizontalAlignment="Center" Visibility="Collapsed" Click="ContinueStory_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>