<Page x:Class="MarshakGame.Views.FlowerGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FlowerGamePage">
    <Grid x:Name="MainGrid">
        <!-- Весь XAML из MainWindow.xaml -->
        <Image x:Name="BackgroundImage" Source="/Views/background.jpg" Stretch="Fill"/>
        <Canvas x:Name="FlowerCanvas" Width="1920" Height="1080" IsHitTestVisible="True" Background="Transparent"/>
        <Image x:Name="BasketImage" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30" Source="Assets/basket_empty.png"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30">
            <TextBlock x:Name="ScoreText" Text="Собрано: 0/0" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <StackPanel x:Name="HeartsPanel" Orientation="Horizontal" Margin="0,10,0,0"/>
        </StackPanel>

        <Button x:Name="StartButton" Content="Начать игру" Width="300" Height="100" FontSize="28"
                Background="#FF72C8D8" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="StartButton_Click"/>
    </Grid>
</Page>